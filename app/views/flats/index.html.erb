
<div class="container my-3">

  <div class="row justify-content-between">

    <% @flats.each do |flat| %>
      <div class="col-sm p-0 m-3 border">
        <div class="bg-light p-3" style="height: 200px" >
          <p> <strong> <%= flat.name %> </strong></p>
          <p>  <strong>Address:</strong> <%= flat.address %></p>
          <div class="d-flex gap-3">
            <strong> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %> </strong>
            <strong> <i class="fa-solid fa-users"></i> <%= flat.number_of_guests %> </strong>
          </div>
        </div>
        <div class="p-3">
          <%= link_to flat_path(flat), class:"text-decoration-none text-dark" do %>
            <strong><%= "More info" %></strong>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>
